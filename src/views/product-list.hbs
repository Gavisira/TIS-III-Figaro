<section class="mt-3">
    <div class="container">
        <h1>Produtos</h1>
        <p class="text-secondary">Lista de produtos cadastrados no sistema</p>
    </div>
</section>

<div class="section mx-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <table class="table" id="tabelaProdutos">
                        <thead class="thead-light">
                            <tr>
                                <th>#</th>
                                <th>Nome</th>
                                <th>Pre√ßo</th>
                                <th>Data de validade</th>
                                <th>Quant.</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                            <tr>
                                <th scope="row"><a href="/products/{{id}}">{{id}}</a></th>
                                <td>{{name}}</td>
                                <td>{{priceFormat}}</td>
                                <td>{{expirationDateFormat}}</td>
                                <td>{{quantityAvailable}}</td>
                            </tr>
                            {{/each }}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>