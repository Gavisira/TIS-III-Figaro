<section class="mt-3">
    <div class="container">
        <h1>Produtos</h1>
        <p class="text-secondary">Lista de produtos cadastrados no sistema</p>
    </div>
</section>

<section class="my-5">
    <div class="container">
        <div class="row">
            <div class="col-9 col-lg-3">
                <div class="input-group">
                    <input id="query-input" name="query-input" type="text" class="form-control"
                        placeholder="Pesquisar...">
                    <div class="input-group-append">
                        <button id="btn-search" class="btn btn-primary">
                            <span class="oi oi-magnifying-glass"></span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <button class="btn btn-success" title="Cadastrar cliente" data-toggle="modal"
                    data-target="#modal-create-product">Cadastrar novo produto</button>
            </div>
        </div>
    </div>
</section>

<section class="my-5">
    <div class="container">
        <table class="table" id="tabelaProdutos">
            <thead class="thead-light">
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Quant. disp.</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>

                {{#unless products.length }}
                <td colspan="8">
                    Nenhuma produto cadastrado ainda.
                    Clique no botão acima para cadastrar um produto.
                </td>
                {{/unless}}

                {{#each products}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td>{{description}}</td>
                    <td>{{quantityAvailable}}</td>
                    <td>
                        <a href="/product/{{id}}">Ver estoque</a> |
                        <a href="javascript:" class="text-danger remove-action" data-id="{{id}}">Excluir</a></td>
                </tr>
                {{/each }}
            </tbody>
        </table>
    </div>
</section>

<div class="modal modal-fade" id="modal-create-product">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <h2>Cadastrar produto</h2>
                <p class="text-secondary">
                    Insira as informações do novo produto e clique em Enviar
                </p>
                <form class="my-3">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label for="productNameFormInput">Nome do produto</label>
                                <input type="text" class="form-control" id="productNameFormInput"
                                    placeholder="Creme de barbear" required>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label for="descriptionFormInput">Descrição do produto</label>
                                <textarea class="form-control" id="descriptionFormInput"></textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn mr-2 text-primary">Cancelar</button>
                <button type="button" id="btn-create" class="btn btn-success">Enviar</button>
            </div>
        </div>
    </div>
</div>

<script async defer src="/js/product.js"></script>