<section class="mt-3">
    <div class="container-fluid">
        <h1>Venda</h1>
        <p class="text-secondary">Registrar venda</p>
    </div>
</section>

<section class="my-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-7">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex">
                            <input class="form-control" id="product" type="text" required>
                            <button class="btn btn-primary ml-3">Pesquisar</button>
                        </div>
                        <h5>Clique nos produtos para adicionar</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <ul class="list-group">
                            {{#each product}}
                            <a href="#" class="list-group-item list-group-item-action bg-list my-3">
                                <span hidden>{{id}}</span>
                                <div class="rounded">
                                    <div class="d-flex justify-content-between">
                                        <h4>{{name}}</h4>
                                        <h5>{{priceFormat}}</h5>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <p>{{description}}</p>
                                        <small>Validade: {{expirationDateFormat}}</small>
                                    </div>
                                </div>
                            </a>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-5">
                <div class="card rounded shadow-card">
                    <div class="card-body" id="card-itens">
                        <h4>Itens</h4>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <small class="align-self-center">Total:</small>
                            <h4 id="partial-value">0</h4>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <small class="align-self-center">Desconto:</small>
                            <input class="form-control" id="discount" type="number" value="0" style="width: 80px">
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <small class="align-self-center">A receber:</small>
                            <h3 id="total-value">0</h3>
                        </div>
                        <button class="btn btn-primary col-12" id="finalize">Finalizar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

